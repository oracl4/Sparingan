<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparingan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".LoginScreen" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".CreateSchedule" />
        <activity android:name=".ProfileScreen" />
        <activity
            android:name=".TipsActivity"
            android:label="@string/title_activity_tips"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Exercise" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".Rating">
        </activity>
        <activity android:name=".MainActivity"></activity>

    </application>

</manifest>